{{#partial "content"}}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/squads" method="post">
                    <div class="form-group mb-4">
                        <label for="name" class="fs-5 mb-2">Name:</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group mb-4">
                        <label for="maxSize" class="fs-5 mb-2">Squad Size:</label>
                        <input type="number" class="form-control" id="size" name="size">
                    </div>
                    <div class="form-group mb-4">

                        <label for="cause" class="fs-5 mb-2">Cause:</label>
                        <input type="text" class="form-control" id="cause" name="cause">
                    </div>

                    <button class="btn btn-outline-warning d-block mx-auto" type="submit">Add Squad</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
{{/partial}}

{{>layout.hbs}}